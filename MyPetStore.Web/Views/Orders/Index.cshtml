@model OrdersViewModel
<div class="row">
    <div class="col-9">

        <h1>Index</h1>

      <form asp-action="Index" asp-controller="Orders" method="get">
            <p>
                <input asp-for="Search" />
                <button type="submit" class="btn btn-secondary">Search</button>
            </p>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].OrderPlaced)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].ProductOrders)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Customer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Customer.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @item.OrderPlaced.ToString("g")
                        </td>
                        <td>
                            @item.ProductOrders.Count() products
                        </td>
                        <td>
                            @item.Customer.FirstName @item.Customer.LastName
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Change Status</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @*<div class="col-3">
        @await Html.PartialAsync("_RecentMovies", Model.RecentMovies)
    </div>*@
</div>